{% if content_block.isInPrimaryColumn() %}
    {% set container_classes = 'component--box-flushbody-vertical component--box--primary' %}
{% else %}
    {% set container_classes = 'component--box--striped component--box--secondary' %}
{% endif %}

<div
    class="component component--box {{ container_classes }} {% block extraClasses %}{% endblock %}" data-content-block-type="{{ content_block.getBlock().getType() }}">
    {% if content_block.getBlock().getTitle() or block('defaultTitle') is not empty %}
        <div class="component__header {{ content_block.isInPrimaryColumn() ? 'br-box-page' : 'br-box-highlight'}}">
            <h2>
                {% if content_block.getBlock().getTitle() %}
                    {{ content_block.getBlock().getTitle() }}
                {% else %}
                    {% block defaultTitle %}{% endblock %}
                {% endif %}
            </h2>
        </div>
    {% endif %}
    <div class="component__body {{ content_block.isInPrimaryColumn() ? ' br-box-page' : ' br-box-subtle'}}">
        {% block blockContent %}{% endblock %}
    </div>
</div>
